{
  "settings": {
    "files.associations": {
      "*.sql": "sql"
    },
    "[sql]": {
      "editor.wordWrap": "off",
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "editor.detectIndentation": false,
      "editor.formatOnSave": true,
      "editor.defaultFormatter": "mtxr.sqltools"
    }
  },
  "extensions": {
    "recommendations": [
      "mtxr.sqltools",
      "mtxr.sqltools-driver-sqlite"
    ]
  }
}
