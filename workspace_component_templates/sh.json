{
  "settings": {
    "[shellscript]": {
      "editor.defaultFormatter": "foxundermoon.shell-format",
      "editor.formatOnSave": true,
      "editor.insertSpaces": true,
      "editor.tabSize": 2
    }
  },
  "extensions": {
    "recommendations": [
      "aaron-bond.better-comments",
      "foxundermoon.shell-format",
      "mads-hartmann.bash-ide-vscode",
      "timonwong.shellcheck"
    ]
  }
}
