{
  "settings": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": false,
      "strings": true,
      "other": true
    },
    "editor.formatOnSave": true,
    "markdownlint.config": {
      "default": true
    }
  },
  "extensions": {
    "recommendations": [
      "budparr.language-hugo-vscode",
      "davidanson.vscode-markdownlint",
      "esbenp.prettier-vscode",
      "yzhang.markdown-all-in-one"
    ]
  }
}
